export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase, formatPrice } from "../../lib/supabase";

// Import email function dynamically
let sendReturnStatusEmail: any = null;
try {
    const emailModule = await import("../../lib/email");
    sendReturnStatusEmail = emailModule.sendReturnStatusEmail;
} catch (e) {
    console.log("Email module not available for returns");
}

// Handle action updates
let message = "";
let messageType: "success" | "error" = "success";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action") as string;
    const orderId = formData.get("order_id") as string;
    const adminNotes = formData.get("admin_notes") as string;

    if (orderId) {
        // Get current order data
        const { data: orderData } = await supabase
            .from("orders")
            .select("*")
            .eq("id", orderId)
            .single();

        let updateData: Record<string, any> = {
            updated_at: new Date().toISOString(),
        };

        let statusLabel = "";

        switch (action) {
            case "approve":
                updateData.return_status = "approved";
                updateData.return_approved_at = new Date().toISOString();
                if (adminNotes) updateData.return_admin_notes = adminNotes;
                statusLabel = "aprobada";
                break;
            case "reject":
                updateData.return_status = "rejected";
                if (adminNotes) updateData.return_admin_notes = adminNotes;
                statusLabel = "rechazada";
                break;
            case "mark_received":
                updateData.return_status = "received";
                updateData.return_received_at = new Date().toISOString();
                if (adminNotes) updateData.return_admin_notes = adminNotes;
                statusLabel = "recibida";
                break;
            case "mark_refunded":
                updateData.return_status = "refunded";
                updateData.return_refunded_at = new Date().toISOString();
                if (adminNotes) updateData.return_admin_notes = adminNotes;
                statusLabel = "reembolsada";
                break;
            case "add_notes":
                if (adminNotes) updateData.return_admin_notes = adminNotes;
                statusLabel = "actualizada";
                break;
        }

        const { error } = await supabase
            .from("orders")
            .update(updateData)
            .eq("id", orderId);

        if (error) {
            message = `Error al actualizar: ${error.message}`;
            messageType = "error";
        } else {
            message = `DevoluciÃ³n ${statusLabel} correctamente`;

            // Send email notification if available
            if (sendReturnStatusEmail && orderData && action !== "add_notes") {
                try {
                    await sendReturnStatusEmail({
                        customerEmail: orderData.customer_email,
                        customerName: orderData.customer_name,
                        orderId: orderId,
                        newStatus: updateData.return_status,
                        adminNotes: adminNotes,
                    });
                    message += " y notificaciÃ³n enviada al cliente";
                } catch (emailError) {
                    console.error(
                        "Error sending return status email:",
                        emailError,
                    );
                }
            }
        }
    }
}

// Get filter from URL
const url = new URL(Astro.request.url);
const filterStatus = url.searchParams.get("status") || "all";

// Fetch all orders with return requests
let query = supabase
    .from("orders")
    .select("*, order_items(*)")
    .eq("return_requested", true)
    .order("return_requested_at", { ascending: false });

if (filterStatus !== "all") {
    query = query.eq("return_status", filterStatus);
}

const { data: returns } = await query;

// Count by status for tabs
const { data: allReturns } = await supabase
    .from("orders")
    .select("return_status")
    .eq("return_requested", true);

const statusCounts = {
    all: allReturns?.length || 0,
    pending:
        allReturns?.filter(
            (r) => r.return_status === "pending" || !r.return_status,
        )?.length || 0,
    approved:
        allReturns?.filter((r) => r.return_status === "approved")?.length || 0,
    rejected:
        allReturns?.filter((r) => r.return_status === "rejected")?.length || 0,
    received:
        allReturns?.filter((r) => r.return_status === "received")?.length || 0,
    refunded:
        allReturns?.filter((r) => r.return_status === "refunded")?.length || 0,
};

const statusColors: Record<string, string> = {
    pending: "bg-yellow-100 text-yellow-800 border-yellow-200",
    approved: "bg-blue-100 text-blue-800 border-blue-200",
    rejected: "bg-red-100 text-red-800 border-red-200",
    received: "bg-purple-100 text-purple-800 border-purple-200",
    refunded: "bg-green-100 text-green-800 border-green-200",
};

const statusLabels: Record<string, string> = {
    pending: "Pendiente",
    approved: "Aprobada",
    rejected: "Rechazada",
    received: "Recibida",
    refunded: "Reembolsada",
};

const statusIcons: Record<string, string> = {
    pending: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    approved: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    rejected:
        "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z",
    received: "M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4",
    refunded:
        "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
};
