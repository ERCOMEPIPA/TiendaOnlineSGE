<script>
    // Toggle return details on row click
    document.querySelectorAll(".return-row").forEach((row) => {
        row.addEventListener("click", () => {
            const returnId = row.getAttribute("data-return-id");
            const detailsRow = document.querySelector(
                `[data-details-for="${returnId}"]`,
            );
            const chevron = row.querySelector(".return-chevron");

            if (detailsRow) {
                detailsRow.classList.toggle("hidden");
                chevron?.classList.toggle("rotate-90");
            }
        });
    });

    // Reject modal
    document.querySelectorAll(".reject-btn").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            e.stopPropagation();
            const orderId = btn.getAttribute("data-order-id");
            const modal = document.getElementById("reject-modal");
            const orderIdInput = document.getElementById("reject-order-id");

            if (modal && orderIdInput && orderId) {
                orderIdInput.value = orderId;
                modal.classList.remove("hidden");
                modal.classList.add("flex");
            }
        });
    });

    // Close modal on backdrop click
    document.getElementById("reject-modal")?.addEventListener("click", (e) => {
        if (e.target === e.currentTarget) {
            e.currentTarget.classList.add("hidden");
            e.currentTarget.classList.remove("flex");
        }
    });
</script>
