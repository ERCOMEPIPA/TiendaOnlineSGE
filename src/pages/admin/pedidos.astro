---
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import Button from "../../components/ui/Button.astro";
import { supabase, formatPrice } from "../../lib/supabase";
import { sendOrderStatusUpdateEmail } from "../../lib/email";

// Handle status update
let message = "";
let messageType: "success" | "error" = "success";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action") as string;
    const orderId = formData.get("order_id") as string;

    if (action === "update_status") {
        const newStatus = formData.get("status") as string;

        // First get the order details for the email
        const { data: orderData } = await supabase
            .from("orders")
            .select("*")
            .eq("id", orderId)
            .single();

        // Update the status
        const { error } = await supabase
            .from("orders")
            .update({ status: newStatus, updated_at: new Date().toISOString() })
            .eq("id", orderId);

        if (error) {
            message = "Error al actualizar el estado";
            messageType = "error";
        } else {
            message = "Estado actualizado correctamente";

            // Send email notification to customer
            if (orderData && newStatus !== "pending") {
                try {
                    await sendOrderStatusUpdateEmail({
                        customerEmail: orderData.customer_email,
                        customerName: orderData.customer_name,
                        orderId: orderId,
                        newStatus: newStatus,
                        orderTotal: orderData.total,
                    });
                    message += " y email enviado al cliente";
                } catch (emailError) {
                    console.error("Error sending status email:", emailError);
                    message += " (email no enviado)";
                }
            }
        }
    }
}

// Fetch orders
const { data: orders } = await supabase
    .from("orders")
    .select("*, order_items(*)")
    .order("created_at", { ascending: false });

const statusColors: Record<string, string> = {
    pending: "bg-yellow-100 text-yellow-800",
    confirmed: "bg-blue-100 text-blue-800",
    shipped: "bg-purple-100 text-purple-800",
    delivered: "bg-green-100 text-green-800",
    cancelled: "bg-red-100 text-red-800",
};

const statusLabels: Record<string, string> = {
    pending: "Pendiente",
    confirmed: "Confirmado",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};
---

<AdminLayout title="Pedidos">
    <div class="max-w-6xl">
        {/* Message */}
        {
            message && (
                <div
                    class={`mb-6 p-4 rounded-lg ${
                        messageType === "success"
                            ? "bg-green-50 text-green-700 border border-green-200"
                            : "bg-red-50 text-red-700 border border-red-200"
                    }`}
                >
                    {message}
                </div>
            )
        }

        {/* Orders Table */}
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <div
                class="px-6 py-4 border-b border-carbon-100 flex items-center justify-between"
            >
                <h2 class="text-lg font-semibold text-carbon-900">
                    Todos los pedidos
                </h2>
                <span class="text-sm text-carbon-500">
                    {orders?.length || 0} pedido(s)
                </span>
            </div>

            {
                orders && orders.length > 0 ? (
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-carbon-50 text-left">
                                <tr>
                                    <th class="px-6 py-3 text-xs font-semibold text-carbon-500 uppercase">
                                        Pedido
                                    </th>
                                    <th class="px-6 py-3 text-xs font-semibold text-carbon-500 uppercase">
                                        Cliente
                                    </th>
                                    <th class="px-6 py-3 text-xs font-semibold text-carbon-500 uppercase">
                                        Total
                                    </th>
                                    <th class="px-6 py-3 text-xs font-semibold text-carbon-500 uppercase">
                                        Estado
                                    </th>
                                    <th class="px-6 py-3 text-xs font-semibold text-carbon-500 uppercase">
                                        Fecha
                                    </th>
                                    <th class="px-6 py-3 text-xs font-semibold text-carbon-500 uppercase">
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-carbon-100">
                                {orders.map((order) => (
                                    <tr class="hover:bg-cream-50">
                                        <td class="px-6 py-4">
                                            <p class="font-mono text-sm text-carbon-600">
                                                #{order.id.slice(0, 8)}
                                            </p>
                                            <p class="text-xs text-carbon-400">
                                                {order.order_items?.length || 0}{" "}
                                                producto(s)
                                            </p>
                                        </td>
                                        <td class="px-6 py-4">
                                            <p class="font-medium text-carbon-800">
                                                {order.customer_name}
                                            </p>
                                            <p class="text-sm text-carbon-500">
                                                {order.customer_email}
                                            </p>
                                        </td>
                                        <td class="px-6 py-4">
                                            <p class="font-semibold text-carbon-900">
                                                {formatPrice(order.total)}
                                            </p>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span
                                                class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${statusColors[order.status] || "bg-gray-100 text-gray-800"}`}
                                            >
                                                {statusLabels[order.status] ||
                                                    order.status}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-carbon-500">
                                            {new Date(
                                                order.created_at,
                                            ).toLocaleDateString("es-ES", {
                                                day: "2-digit",
                                                month: "short",
                                                year: "numeric",
                                            })}
                                        </td>
                                        <td class="px-6 py-4">
                                            <form
                                                method="POST"
                                                class="flex items-center gap-2"
                                            >
                                                <input
                                                    type="hidden"
                                                    name="action"
                                                    value="update_status"
                                                />
                                                <input
                                                    type="hidden"
                                                    name="order_id"
                                                    value={order.id}
                                                />
                                                <select
                                                    name="status"
                                                    class="text-sm border border-carbon-200 rounded px-2 py-1"
                                                >
                                                    <option
                                                        value="pending"
                                                        selected={
                                                            order.status ===
                                                            "pending"
                                                        }
                                                    >
                                                        Pendiente
                                                    </option>
                                                    <option
                                                        value="confirmed"
                                                        selected={
                                                            order.status ===
                                                            "confirmed"
                                                        }
                                                    >
                                                        Confirmado
                                                    </option>
                                                    <option
                                                        value="shipped"
                                                        selected={
                                                            order.status ===
                                                            "shipped"
                                                        }
                                                    >
                                                        Enviado
                                                    </option>
                                                    <option
                                                        value="delivered"
                                                        selected={
                                                            order.status ===
                                                            "delivered"
                                                        }
                                                    >
                                                        Entregado
                                                    </option>
                                                    <option
                                                        value="cancelled"
                                                        selected={
                                                            order.status ===
                                                            "cancelled"
                                                        }
                                                    >
                                                        Cancelado
                                                    </option>
                                                </select>
                                                <button
                                                    type="submit"
                                                    class="text-navy-600 hover:text-navy-800 text-sm font-medium"
                                                >
                                                    Actualizar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                ) : (
                    <div class="p-12 text-center text-carbon-500">
                        <svg
                            class="w-16 h-16 mx-auto text-carbon-300 mb-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                            />
                        </svg>
                        <h3 class="text-lg font-medium text-carbon-700 mb-2">
                            No hay pedidos aún
                        </h3>
                        <p class="text-sm">
                            Los pedidos aparecerán aquí cuando los clientes
                            compren en tu tienda.
                        </p>
                    </div>
                )
            }
        </div>

        {/* Info box */}
        <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
            <div class="flex gap-3">
                <svg
                    class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                </svg>
                <div>
                    <p class="text-sm text-blue-800 font-medium">
                        Sistema de pedidos
                    </p>
                    <p class="text-sm text-blue-700 mt-1">
                        Para que aparezcan pedidos, necesitas implementar el
                        flujo de checkout. Los pedidos se crearán cuando los
                        clientes completen una compra.
                    </p>
                </div>
            </div>
        </div>
    </div>
</AdminLayout>
