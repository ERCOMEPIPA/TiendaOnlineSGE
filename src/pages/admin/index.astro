---
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import SalesChart from "../../components/islands/SalesChart";
import { supabase, formatPrice } from "../../lib/supabase";

// Fetch products stats
const { data: products } = await supabase
    .from("products")
    .select("id, name, price, stock");
const { data: categories } = await supabase.from("categories").select("id");

// Calculate basic stats
const totalProducts = products?.length || 0;
const totalCategories = categories?.length || 0;
const lowStockCount = products?.filter((p) => p.stock <= 5).length || 0;
const totalValue =
    products?.reduce((sum, p) => sum + p.price * p.stock, 0) || 0;

// ==========================================
// SQL QUERIES FOR SALES ANALYTICS (KPIs)
// ==========================================

// Get current month start date
const now = new Date();
const monthStart = new Date(now.getFullYear(), now.getMonth(), 1).toISOString();

// 1. Ventas totales del mes (SUM)
const { data: monthlySalesData } = await supabase
    .from("orders")
    .select("total")
    .in("status", ["confirmed", "shipped", "delivered"])
    .gte("created_at", monthStart);

const monthlySales =
    monthlySalesData?.reduce((sum, order) => sum + (order.total || 0), 0) || 0;

// 2. Pedidos pendientes (COUNT)
const { count: pendingOrdersCount } = await supabase
    .from("orders")
    .select("*", { count: "exact", head: true })
    .eq("status", "pending");

const pendingOrders = pendingOrdersCount || 0;

// 3. Producto más vendido (GROUP BY con SUM)
const { data: topProductData } = await supabase
    .from("order_items")
    .select("product_id, quantity, products(name)")
    .order("quantity", { ascending: false })
    .limit(50);

// Aggregate by product_id manually
const productSales: Record<string, { name: string; qty: number }> = {};
topProductData?.forEach((item: any) => {
    const id = item.product_id;
    if (!productSales[id]) {
        productSales[id] = { name: item.products?.name || "Producto", qty: 0 };
    }
    productSales[id].qty += item.quantity || 1;
});

const topProduct = Object.entries(productSales).sort(
    (a, b) => b[1].qty - a[1].qty,
)[0];

const topProductName = topProduct?.[1]?.name || "Sin ventas";
const topProductQty = topProduct?.[1]?.qty || 0;

// 4. Ventas últimos 7 días (GROUP BY fecha)
const sevenDaysAgo = new Date(
    Date.now() - 7 * 24 * 60 * 60 * 1000,
).toISOString();

const { data: dailySalesData } = await supabase
    .from("orders")
    .select("created_at, total")
    .in("status", ["confirmed", "shipped", "delivered"])
    .gte("created_at", sevenDaysAgo)
    .order("created_at", { ascending: true });

// Aggregate by date
const dailySalesMap: Record<string, number> = {};
dailySalesData?.forEach((order: any) => {
    const date = order.created_at.split("T")[0];
    dailySalesMap[date] = (dailySalesMap[date] || 0) + (order.total || 0);
});

// Fill in missing days with 0
const chartData = [];
for (let i = 6; i >= 0; i--) {
    const date = new Date(Date.now() - i * 24 * 60 * 60 * 1000);
    const dateStr = date.toISOString().split("T")[0];
    chartData.push({
        date: dateStr,
        sales: dailySalesMap[dateStr] || 0,
    });
}
