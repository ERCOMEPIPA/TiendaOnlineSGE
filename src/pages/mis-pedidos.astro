---
export const prerender = false;

import PublicLayout from "../layouts/PublicLayout.astro";
import { getUserSession } from "../lib/auth";
import { supabase } from "../lib/supabase";

// Check authentication
const userSession = await getUserSession(Astro.cookies);

if (!userSession?.user) {
    return Astro.redirect("/login?redirect=/mis-pedidos");
}

// Fetch user's orders by email
const userEmail = userSession.user.email;

let orders: any[] = [];
let errorMessage = "";

try {
    const { data: ordersData, error: ordersError } = await supabase
        .from("orders")
        .select("*")
        .eq("customer_email", userEmail)
        .order("created_at", { ascending: false });

    if (ordersError) {
        console.error("Error fetching orders:", ordersError);
        errorMessage = ordersError.message;
    } else if (ordersData && ordersData.length > 0) {
        for (const order of ordersData) {
            const { data: items } = await supabase
                .from("order_items")
                .select("*")
                .eq("order_id", order.id);
            
            order.order_items = items || [];
        }
        orders = ordersData;
    }
} catch (e: any) {
    console.error("Exception fetching orders:", e);
    errorMessage = e.message || "Error desconocido";
}

const formatPrice = (cents: number) => {
    return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
    }).format(cents / 100);
};

const formatShortDate = (date: string) => {
    return new Date(date).toLocaleDateString("es-ES", {
        day: "numeric",
        month: "short",
        year: "numeric",
    });
};

// Status configuration
const statusConfig: Record<string, { index: number; label: string; color: string; bgColor: string; icon: string; description: string }> = {
    pending: { index: 0, label: "Pendiente", color: "text-[#8B4513]", bgColor: "bg-[#fdfcf9]", icon: "clock", description: "Tu pedido ha sido recibido" },
    confirmed: { index: 1, label: "Confirmado", color: "text-[#2a2622]", bgColor: "bg-[#e8e4db]", icon: "check", description: "Pago verificado, preparando pedido" },
    shipped: { index: 2, label: "Enviado", color: "text-[#8B4513]", bgColor: "bg-[#fdfcf9]", icon: "truck", description: "Tu pedido está en camino" },
    delivered: { index: 3, label: "Entregado", color: "text-[#2a2622]", bgColor: "bg-[#e8e4db]", icon: "home", description: "¡Pedido entregado con éxito!" },
    cancelled: { index: -1, label: "Cancelado", color: "text-red-800", bgColor: "bg-red-50", icon: "x", description: "Pedido cancelado" },
};

const getStatusConfig = (status: string) => statusConfig[status] || statusConfig.pending;
---

<PublicLayout title="Mis Pedidos" description="Historial de tus compras">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-serif font-bold text-[#2a2622]">Mis Pedidos</h1>
            <p class="mt-2 text-[#6f6458]">
                Historial y seguimiento de todas tus compras
            </p>
        </div>

        {errorMessage && (
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                <p class="text-red-800">Error al cargar los pedidos: {errorMessage}</p>
            </div>
        )}

        {orders && orders.length === 0 && (
            <div class="bg-white rounded-xl shadow-sm p-12 text-center">
                <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                <h3 class="text-xl font-medium text-gray-900 mb-2">No tienes pedidos aún</h3>
                <p class="text-gray-500 mb-6">¡Explora nuestra colección y haz tu primera compra!</p>
                <a 
                    href="/productos" 
                    class="inline-flex items-center px-6 py-3 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors"
                >
                    Ver productos
                </a>
            </div>
        )}

        {orders && orders.length > 0 && (
            <div class="space-y-8">
                {orders.map((order: any) => {
                    const config = getStatusConfig(order.status);
                    const isCancelled = order.status === "cancelled";
                    const canCancel = order.status === "pending" || order.status === "confirmed";
                    const canRequestReturn = order.status === "delivered" && !order.return_requested;
                    const returnRequested = order.return_requested;
                    
                    return (
                        <div class="bg-white rounded-none shadow-sm overflow-hidden border border-[#ccc5b8]">
                            <!-- Order Header -->
                            <div class="px-6 py-4 bg-[#fdfcf9] border-b border-[#ccc5b8]">
                                <div class="flex flex-wrap items-center justify-between gap-4">
                                    <div class="flex items-center gap-6">
                                        <div>
                                            <p class="text-sm text-[#6f6458]">Pedido</p>
                                            <p class="font-mono font-semibold text-[#2a2622]">
                                                #{order.id.slice(0, 8).toUpperCase()}
                                            </p>
                                        </div>
                                        <div>
                                            <p class="text-sm text-[#6f6458]">Fecha</p>
                                            <p class="font-medium text-[#2a2622]">{formatShortDate(order.created_at)}</p>
                                        </div>
                                        <div>
                                            <p class="text-sm text-[#6f6458]">Total</p>
                                            <p class="font-semibold text-[#2a2622]">{formatPrice(order.total)}</p>
                                        </div>
                                    </div>
                                    <span class={`inline-flex px-3 py-1 rounded-full text-sm font-medium ${Boolean(order.return_requested) ? 'bg-orange-100 text-orange-700' : `${config.bgColor} ${config.color}`}`}>
                                        {Boolean(order.return_requested) ? "En devolución" : config.label}
                                    </span>
                                </div>
                            </div>

                            <!-- Order Tracking Timeline -->
                            {!isCancelled && (
                                <div class="px-6 py-6 border-b border-gray-100">
                                    <!-- Timeline Steps -->
                                    <div class="flex justify-between items-center relative">
                                        <!-- Progress Line Background -->
                                        <div class="absolute top-4 left-8 right-8 h-1 bg-[#e8e4db] rounded-none"></div>
                                        <!-- Progress Line Active -->
                                        <div 
                                            class="absolute top-4 left-8 h-1 bg-[#2a2622] rounded-none transition-all duration-500"
                                            style={`width: calc(${config.index >= 0 ? (config.index / 3) * 100 : 0}% - 64px)`}
                                        ></div>

                                        <!-- Step 1: Pending -->
                                        <div class="flex flex-col items-center z-10 w-20">
                                            <div class={`w-8 h-8 rounded-none flex items-center justify-center ${config.index >= 0 ? 'bg-[#2a2622] text-[#fdfcf9]' : 'bg-[#e8e4db] text-[#ada397]'}`}>
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                            </div>
                                            <p class={`mt-2 text-xs font-medium ${config.index >= 0 ? 'text-[#2a2622]' : 'text-[#ada397]'}`}>Pendiente</p>
                                        </div>

                                        <!-- Step 2: Confirmed -->
                                        <div class="flex flex-col items-center z-10 w-20">
                                            <div class={`w-8 h-8 rounded-full flex items-center justify-center ${config.index >= 1 ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-400'}`}>
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                </svg>
                                            </div>
                                            <p class={`mt-2 text-xs font-medium ${config.index >= 1 ? 'text-gray-900' : 'text-gray-400'}`}>Confirmado</p>
                                        </div>

                                        <!-- Step 3: Shipped -->
                                        <div class="flex flex-col items-center z-10 w-20">
                                            <div class={`w-8 h-8 rounded-full flex items-center justify-center ${config.index >= 2 ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-400'}`}>
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                                                </svg>
                                            </div>
                                            <p class={`mt-2 text-xs font-medium ${config.index >= 2 ? 'text-gray-900' : 'text-gray-400'}`}>Enviado</p>
                                        </div>

                                        <!-- Step 4: Delivered -->
                                        <div class="flex flex-col items-center z-10 w-20">
                                            <div class={`w-8 h-8 rounded-full flex items-center justify-center ${config.index >= 3 ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-400'}`}>
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                                </svg>
                                            </div>
                                            <p class={`mt-2 text-xs font-medium ${config.index >= 3 ? 'text-gray-900' : 'text-gray-400'}`}>Entregado</p>
                                        </div>
                                    </div>
                                    
                                    <!-- Current Status Description -->
                                    <div class="mt-6 text-center">
                                        <p class="text-sm text-gray-600">{config.description}</p>
                                    </div>
                                </div>
                            )}

                            <!-- Cancelled Order Message -->
                            {isCancelled && (
                                <div class="px-6 py-4 bg-red-50 border-b border-red-100">
                                    <div class="flex items-center gap-3">
                                        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                        <p class="text-red-700">Este pedido ha sido cancelado</p>
                                    </div>
                                </div>
                            )}

                            <!-- Order Items -->
                            <div class="px-6 py-4">
                                <h4 class="text-sm font-medium text-gray-500 mb-3">Productos</h4>
                                <div class="space-y-3">
                                    {order.order_items?.map((item: any) => (
                                        <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                                            <div class="flex-1">
                                                <p class="font-medium text-[#2a2622]">{item.product_name}</p>
                                                <p class="text-sm text-[#6f6458]">
                                                    Talla: {item.size} · Cantidad: {item.quantity}
                                                </p>
                                            </div>
                                            <p class="font-medium text-gray-900">
                                                {formatPrice(item.product_price * item.quantity)}
                                            </p>
                                        </div>
                                    ))}
                                </div>
                            </div>

                            <!-- Order Footer -->
                            <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
                                <div class="flex flex-wrap items-center justify-between gap-2">
                                    <div class="text-sm text-gray-500">
                                        {order.shipping_address && order.shipping_address !== 'N/A' ? (
                                            <span>
                                                <span class="font-medium text-[#2a2622]">Envío:</span> {order.shipping_address}, {order.shipping_city || ''} {order.shipping_postal_code || ''}
                                            </span>
                                        ) : (
                                            <span>
                                                <span class="font-medium text-[#2a2622]">Cliente:</span> {order.customer_name} ({order.customer_email})
                                            </span>
                                        )}
                                    </div>
                                    <div class="flex items-center gap-3">
                                        {order.discount_amount > 0 && (
                                            <div class="text-sm text-green-600 font-medium">
                                                Descuento: -{formatPrice(order.discount_amount)}
                                            </div>
                                        )}
                                        
                                        {/* Botón Cancelar Pedido - Solo para pending/confirmed */}
                                        {canCancel && (
                                            <button
                                                type="button"
                                                class="cancel-order-btn px-4 py-2 text-sm font-medium text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition-colors flex items-center gap-2"
                                                data-order-id={order.id}
                                            >
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                                </svg>
                                                Cancelar Pedido
                                            </button>
                                        )}
                                        
                                        {/* Botón Solicitar Devolución - Solo para delivered y si NO se ha solicitado ya */}
                                        {canRequestReturn && !returnRequested && (
                                            <button
                                                type="button"
                                                class="return-order-btn px-4 py-2 text-sm font-medium text-[#8B4513] bg-[#fdfcf9] border border-[#8B4513] rounded-none hover:bg-[#8B4513] hover:text-[#fdfcf9] transition-colors flex items-center gap-2"
                                                data-order-id={order.id}
                                            >
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                                </svg>
                                                Solicitar Devolución
                                            </button>
                                        )}
                                    </div>
                                </div>
                            </div>
                        </div>
                    );
                })}
            </div>
        )}
    </div>

    <!-- Modal de Devolución -->
    <div id="return-modal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden backdrop-blur-sm">
        <div class="bg-white rounded-none shadow-2xl max-w-lg w-full mx-4 max-h-[90vh] overflow-y-auto border border-[#ccc5b8]">
            <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold text-[#2a2622]">Solicitar Devolución</h3>
                    <button id="close-return-modal" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                
                <!-- Instrucciones de envío -->
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
                    <h4 class="font-semibold text-yellow-800 mb-2">Dirección de envío</h4>
                    <p class="text-yellow-700">Debes enviar los artículos en su embalaje original a:</p>
                    <p class="font-bold text-yellow-900 mt-2">
                        Calle de la Moda 123<br>
                        Polígono Industrial<br>
                        28001 Madrid, España
                    </p>
                </div>
                
                <!-- Confirmación email -->
                <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-4">
                    <h4 class="font-semibold text-blue-800 mb-2">Confirmación por email</h4>
                    <p class="text-blue-700">
                        Hemos enviado un correo con la <strong>etiqueta de devolución prepagada</strong> a tu email asociado.
                    </p>
                </div>
                
                <!-- Disclaimer financiero -->
                <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
                    <h4 class="font-semibold text-red-800 mb-2">Información importante</h4>
                    <p class="text-red-700 text-sm">
                        <strong>Una vez recibido y validado el paquete, el reembolso se procesará en tu método de pago original en un plazo de 5 a 7 días hábiles.</strong>
                    </p>
                </div>

                <!-- Motivo de devolución -->
                <div class="mb-6">
                    <label for="return-reason" class="block text-sm font-medium text-[#2a2622] mb-2">
                        Motivo de la devolución
                    </label>
                    <textarea 
                        id="return-reason-input" 
                        rows="3" 
                        class="w-full px-4 py-2 border border-[#ccc5b8] rounded-none focus:ring-[#8B4513] focus:border-[#8B4513] text-sm"
                        placeholder="Ej: La talla es demasiado pequeña, el color no es como en la foto..."
                    ></textarea>
                </div>
                
                <div class="flex gap-3">
                    <button id="confirm-return-btn" class="flex-1 px-4 py-3 bg-[#2a2622] text-[#fdfcf9] rounded-none font-medium hover:bg-[#3d3831] transition-colors uppercase tracking-widest text-sm">
                        Confirmar solicitud
                    </button>
                    <button id="cancel-return-modal" class="px-4 py-3 border border-[#ccc5b8] rounded-none font-medium text-[#6f6458] hover:bg-[#fdfcf9] transition-colors">
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Cancelación -->
    <div id="cancel-modal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full mx-4">
            <div class="p-6">
                <div class="text-center mb-6">
                    <div class="w-16 h-16 mx-auto bg-red-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">¿Cancelar pedido?</h3>
                    <p class="text-gray-600">
                        Esta acción cancelará tu pedido y restaurará el stock de los productos. Esta acción no se puede deshacer.
                    </p>
                </div>
                
                <div class="flex gap-3">
                    <button id="confirm-cancel-btn" class="flex-1 px-4 py-3 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition-colors">
                        Sí, cancelar pedido
                    </button>
                    <button id="cancel-cancel-modal" class="flex-1 px-4 py-3 border border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-colors">
                        No, mantener
                    </button>
                </div>
            </div>
        </div>
    </div>
</PublicLayout>

<script>
    let currentOrderId: string | null = null;
    
    // =====================================================
    // Sistema de notificaciones Toast bonitas
    // =====================================================
    function showToast(message: string, type: 'success' | 'error' | 'info' = 'success') {
        // Crear contenedor si no existe
        let container = document.getElementById('toast-container');
        if (!container) {
            container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'fixed top-4 right-4 z-[100] flex flex-col gap-3';
            document.body.appendChild(container);
        }
        
        // Iconos según tipo
        const icons = {
            success: `<svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
            error: `<svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
            info: `<svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`
        };
        
        const bgColors = {
            success: 'bg-green-50 border-green-200',
            error: 'bg-red-50 border-red-200',
            info: 'bg-blue-50 border-blue-200'
        };
        
        // Crear toast
        const toast = document.createElement('div');
        toast.className = `flex items-center gap-3 px-5 py-4 rounded-xl shadow-lg border ${bgColors[type]} transform translate-x-full opacity-0 transition-all duration-300 max-w-sm`;
        toast.innerHTML = `
            ${icons[type]}
            <p class="text-gray-800 font-medium text-sm">${message}</p>
            <button class="ml-auto text-gray-400 hover:text-gray-600 transition-colors" onclick="this.parentElement.remove()">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        `;
        
        container.appendChild(toast);
        
        // Animar entrada
        requestAnimationFrame(() => {
            toast.classList.remove('translate-x-full', 'opacity-0');
        });
        
        // Auto-remover después de 4 segundos
        setTimeout(() => {
            toast.classList.add('translate-x-full', 'opacity-0');
            setTimeout(() => toast.remove(), 300);
        }, 4000);
    }
    
    // Modal de cancelación
    const cancelModal = document.getElementById('cancel-modal');
    const confirmCancelBtn = document.getElementById('confirm-cancel-btn');
    const cancelCancelModal = document.getElementById('cancel-cancel-modal');
    
    // Modal de devolución
    const returnModal = document.getElementById('return-modal');
    const closeReturnModal = document.getElementById('close-return-modal');
    const confirmReturnBtn = document.getElementById('confirm-return-btn');
    const cancelReturnModal = document.getElementById('cancel-return-modal');
    
    // Event listeners para botones de cancelar
    document.querySelectorAll('.cancel-order-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            currentOrderId = (e.currentTarget as HTMLElement).dataset.orderId || null;
            cancelModal?.classList.remove('hidden');
        });
    });
    
    // Event listeners para botones de devolución
    document.querySelectorAll('.return-order-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            currentOrderId = (e.currentTarget as HTMLElement).dataset.orderId || null;
            returnModal?.classList.remove('hidden');
        });
    });
    
    // Cerrar modal de cancelación
    cancelCancelModal?.addEventListener('click', () => {
        cancelModal?.classList.add('hidden');
        currentOrderId = null;
    });
    
    // Cerrar modal de devolución
    closeReturnModal?.addEventListener('click', () => {
        returnModal?.classList.add('hidden');
        currentOrderId = null;
    });
    cancelReturnModal?.addEventListener('click', () => {
        returnModal?.classList.add('hidden');
        currentOrderId = null;
    });
    
    // Confirmar cancelación
    confirmCancelBtn?.addEventListener('click', async () => {
        if (!currentOrderId) return;
        
        const btn = confirmCancelBtn as HTMLButtonElement;
        btn.disabled = true;
        btn.textContent = 'Cancelando...';
        
        try {
            const response = await fetch('/api/orders/cancel', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ orderId: currentOrderId })
            });
            
            const data = await response.json();
            
            if (data.success) {
                cancelModal?.classList.add('hidden');
                showToast('Pedido cancelado correctamente. El stock ha sido restaurado.', 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showToast('' + (data.error || 'No se pudo cancelar el pedido'), 'error');
            }
        } catch (error) {
            showToast('Error de conexión. Por favor, inténtalo de nuevo.', 'error');
        } finally {
            btn.disabled = false;
            btn.textContent = 'Sí, cancelar pedido';
        }
    });
    
    // Confirmar devolución
    confirmReturnBtn?.addEventListener('click', async () => {
        if (!currentOrderId) return;
        
        const reasonInput = document.getElementById('return-reason-input') as HTMLTextAreaElement;
        const reason = reasonInput?.value.trim();

        if (!reason) {
            showToast('Por favor, indica el motivo de la devolución.', 'error');
            return;
        }
        
        const btn = confirmReturnBtn as HTMLButtonElement;
        btn.disabled = true;
        btn.textContent = 'Procesando...';
        
        try {
            const response = await fetch('/api/orders/return-request', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    orderId: currentOrderId,
                    reason: reason
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                returnModal?.classList.add('hidden');
                showToast('Solicitud de devolución registrada. Revisa tu email para las instrucciones.', 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showToast('' + (data.error || 'No se pudo procesar la solicitud'), 'error');
            }
        } catch (error) {
            showToast('Error de conexión. Por favor, inténtalo de nuevo.', 'error');
        } finally {
            btn.disabled = false;
            btn.textContent = 'Confirmar solicitud';
        }
    });
    
    // Cerrar modales al hacer clic fuera
    cancelModal?.addEventListener('click', (e) => {
        if (e.target === cancelModal) {
            cancelModal.classList.add('hidden');
            currentOrderId = null;
        }
    });
    returnModal?.addEventListener('click', (e) => {
        if (e.target === returnModal) {
            returnModal.classList.add('hidden');
            currentOrderId = null;
        }
    });
</script>
