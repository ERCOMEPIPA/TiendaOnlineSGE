---
export const prerender = false;

import PublicLayout from "../layouts/PublicLayout.astro";
import { supabase } from "../lib/supabase";

// Handle redirect first, before any response is sent
const accessToken = Astro.cookies.get("user-access-token")?.value;
let shouldClearCookies = false;

if (accessToken) {
    const { data, error } = await supabase.auth.getUser(accessToken);
    if (data?.user && !error) {
        const redirectTo = Astro.url.searchParams.get("redirect") || "/";
        return Astro.redirect(redirectTo);
    } else {
        // Mark cookies for deletion - will be done before rendering
        shouldClearCookies = true;
    }
}

// Clear invalid cookies before any rendering
if (shouldClearCookies) {
    Astro.cookies.delete("user-access-token", { path: "/" });
    Astro.cookies.delete("user-refresh-token", { path: "/" });
}

// Handle login form submission
let error = "";
let success = "";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;

    const { data, error: authError } = await supabase.auth.signInWithPassword({
        email,
        password,
    });

    if (authError) {
        error =
            "Credenciales inválidas. Por favor, verifica tu email y contraseña.";
    } else if (data.session) {
        // Set cookies for user session
        Astro.cookies.set("user-access-token", data.session.access_token, {
            path: "/",
            httpOnly: true,
            secure: import.meta.env.PROD,
            sameSite: "lax",
            maxAge: 60 * 60 * 24, // 24 hours
        });

        Astro.cookies.set("user-refresh-token", data.session.refresh_token, {
            path: "/",
            httpOnly: true,
            secure: import.meta.env.PROD,
            sameSite: "lax",
            maxAge: 60 * 60 * 24 * 30, // 30 days
        });

        const redirectTo = Astro.url.searchParams.get("redirect") || "/";
        return Astro.redirect(redirectTo);
    }
}
---

<PublicLayout
    title="Iniciar Sesión"
    description="Inicia sesión en FashionStore"
>
    <div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h1
                    class="text-3xl font-serif font-bold text-carbon-900 mb-2 text-center"
                >
                    Iniciar Sesión
                </h1>
                <p class="text-carbon-500 text-center mb-8">
                    Accede a tu cuenta para continuar
                </p>

                {
                    error && (
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <p class="text-red-700 text-sm">{error}</p>
                        </div>
                    )
                }

                {
                    success && (
                        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                            <p class="text-green-700 text-sm">{success}</p>
                        </div>
                    )
                }

                <form method="POST" class="space-y-6">
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-carbon-700 mb-2"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 border border-carbon-200 rounded-lg focus:ring-2 focus:ring-navy-500 focus:border-transparent"
                            placeholder="tu@email.com"
                        />
                    </div>

                    <div>
                        <label
                            for="password"
                            class="block text-sm font-medium text-carbon-700 mb-2"
                        >
                            Contraseña
                        </label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            class="w-full px-4 py-3 border border-carbon-200 rounded-lg focus:ring-2 focus:ring-navy-500 focus:border-transparent"
                            placeholder="••••••••"
                        />
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-navy-800 text-white py-3 rounded-lg font-semibold hover:bg-navy-900 transition-colors"
                    >
                        Iniciar Sesión
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-carbon-500 text-sm">
                        ¿No tienes cuenta?{" "}
                        <a
                            href={`/registro?redirect=${Astro.url.searchParams.get("redirect") || "/"}`}
                            class="text-navy-800 font-semibold hover:underline"
                        >
                            Regístrate aquí
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</PublicLayout>
