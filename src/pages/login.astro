---
export const prerender = false;

import PublicLayout from "../layouts/PublicLayout.astro";
import { supabase } from "../lib/supabase";

// Handle redirect first, before any response is sent
const accessToken = Astro.cookies.get("user-access-token")?.value;
let shouldClearCookies = false;

if (accessToken) {
    const { data, error } = await supabase.auth.getUser(accessToken);
    if (data?.user && !error) {
        const redirectTo = Astro.url.searchParams.get("redirect") || "/";
        return Astro.redirect(redirectTo);
    } else {
        // Mark cookies for deletion - will be done before rendering
        shouldClearCookies = true;
    }
}

// Clear invalid cookies before any rendering
if (shouldClearCookies) {
    Astro.cookies.delete("user-access-token", { path: "/" });
    Astro.cookies.delete("user-refresh-token", { path: "/" });
}

// Handle login form submission
let error = Astro.url.searchParams.get("error") || "";
let success = "";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;

    const { data, error: authError } = await supabase.auth.signInWithPassword({
        email,
        password,
    });

    if (authError) {
        error =
            "Credenciales inválidas. Por favor, verifica tu email y contraseña.";
    } else if (data.session) {
        // Set cookies for user session
        Astro.cookies.set("user-access-token", data.session.access_token, {
            path: "/",
            httpOnly: true,
            secure: import.meta.env.PROD,
            sameSite: "lax",
            maxAge: 60 * 60 * 24, // 24 hours
        });

        Astro.cookies.set("user-refresh-token", data.session.refresh_token, {
            path: "/",
            httpOnly: true,
            secure: import.meta.env.PROD,
            sameSite: "lax",
            maxAge: 60 * 60 * 24 * 30, // 30 days
        });

        const redirectTo = Astro.url.searchParams.get("redirect") || "/";
        return Astro.redirect(redirectTo);
    }
}
---

<PublicLayout title="Iniciar Sesión" description="Inicia sesión en HYPESTAGE">
    <script>
        import { supabase } from "../lib/supabase";

        // Listen for auth state changes (especially for Google OAuth redirect return)
        supabase.auth.onAuthStateChange(async (event, session) => {
            if (event === "SIGNED_IN" && session) {
                // Sync session to server-side cookies
                try {
                    const response = await fetch("/api/auth/session", {
                        method: "POST",
                        body: JSON.stringify(session),
                        headers: { "Content-Type": "application/json" },
                    });

                    if (response.ok) {
                        // Redirect home or to the original destination
                        const urlParams = new URLSearchParams(
                            window.location.search,
                        );
                        window.location.href = urlParams.get("redirect") || "/";
                    }
                } catch (err) {
                    console.error("Error syncing session:", err);
                }
            }
        });

        // Handle Google Login click
        // @ts-ignore
        window.handleGoogleLogin = async () => {
            const { error } = await supabase.auth.signInWithOAuth({
                provider: "google",
                options: {
                    redirectTo:
                        window.location.origin +
                        window.location.pathname +
                        window.location.search,
                },
            });
            if (error) alert(error.message);
        };
    </script>
    <div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
        <div class="max-w-md w-full">
            <div
                class="bg-white rounded-none shadow-lg p-8 border border-[#ccc5b8]"
            >
                <h1
                    class="text-3xl font-serif font-bold text-[#2a2622] mb-2 text-center"
                >
                    Iniciar Sesión
                </h1>
                <p class="text-[#6f6458] text-center mb-8">
                    Accede a tu cuenta para continuar
                </p>

                {
                    error && (
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <p class="text-red-700 text-sm">{error}</p>
                        </div>
                    )
                }

                {
                    success && (
                        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                            <p class="text-green-700 text-sm">{success}</p>
                        </div>
                    )
                }

                <form method="POST" class="space-y-6">
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-[#2a2622] mb-2"
                        >
                            Email
                        </label>
                        <input
                            type="email"
