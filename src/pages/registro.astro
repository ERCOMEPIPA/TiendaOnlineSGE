---
export const prerender = false;

import PublicLayout from "../layouts/PublicLayout.astro";
import { supabase } from "../lib/supabase";
import { sendWelcomeEmail } from "../lib/email";

// Handle redirect first, before any response is sent
const accessToken = Astro.cookies.get("user-access-token")?.value;
let shouldClearCookies = false;

if (accessToken) {
    const { data, error } = await supabase.auth.getUser(accessToken);
    if (data?.user && !error) {
        const redirectTo = Astro.url.searchParams.get("redirect") || "/";
        return Astro.redirect(redirectTo);
    } else {
        shouldClearCookies = true;
    }
}

// Clear invalid cookies before any rendering
if (shouldClearCookies) {
    Astro.cookies.delete("user-access-token", { path: "/" });
    Astro.cookies.delete("user-refresh-token", { path: "/" });
}

// Handle registration form submission
let error = "";
let success = "";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;
    const confirmPassword = formData.get("confirm-password") as string;
    const name = formData.get("name") as string;

    // Validation
    if (password !== confirmPassword) {
        error = "Las contraseñas no coinciden.";
    } else if (password.length < 6) {
        error = "La contraseña debe tener al menos 6 caracteres.";
    } else {
        const { data, error: authError } = await supabase.auth.signUp({
            email,
            password,
            options: {
                data: {
                    full_name: name,
                },
            },
        });

        if (authError) {
            if (authError.message.includes("already registered")) {
                error =
                    "Este email ya está registrado. Intenta iniciar sesión.";
            } else {
                error = authError.message;
            }
        } else if (data.user) {
            // Send welcome email
            await sendWelcomeEmail(email, name);

            // Check if email confirmation is required
            if (data.session) {
                // Auto-login if no confirmation required
                Astro.cookies.set(
                    "user-access-token",
                    data.session.access_token,
                    {
                        path: "/",
                        httpOnly: true,
                        secure: import.meta.env.PROD,
                        sameSite: "lax",
                        maxAge: 60 * 60 * 24,
                    },
                );

                Astro.cookies.set(
                    "user-refresh-token",
                    data.session.refresh_token,
                    {
                        path: "/",
                        httpOnly: true,
                        secure: import.meta.env.PROD,
                        sameSite: "lax",
                        maxAge: 60 * 60 * 24 * 30,
                    },
                );

                const redirectTo =
                    Astro.url.searchParams.get("redirect") || "/";
                return Astro.redirect(redirectTo);
            } else {
                success =
                    "Cuenta creada exitosamente. Por favor, verifica tu email antes de iniciar sesión.";
            }
        }
    }
}
---

<PublicLayout title="Registrarse" description="Crea tu cuenta en FashionStore">
    <div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h1
                    class="text-3xl font-serif font-bold text-carbon-900 mb-2 text-center"
                >
                    Crear Cuenta
                </h1>
                <p class="text-carbon-500 text-center mb-8">
                    Regístrate para realizar tus compras
                </p>

                {
                    error && (
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <p class="text-red-700 text-sm">{error}</p>
                        </div>
                    )
                }

                {
                    success && (
                        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                            <p class="text-green-700 text-sm">{success}</p>
                        </div>
                    )
                }

                <form method="POST" class="space-y-6">
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-carbon-700 mb-2"
                        >
                            Nombre completo
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 border border-carbon-200 rounded-lg focus:ring-2 focus:ring-navy-500 focus:border-transparent"
                            placeholder="Tu nombre"
                        />
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-carbon-700 mb-2"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 border border-carbon-200 rounded-lg focus:ring-2 focus:ring-navy-500 focus:border-transparent"
                            placeholder="tu@email.com"
                        />
                    </div>

                    <div>
                        <label
                            for="password"
                            class="block text-sm font-medium text-carbon-700 mb-2"
                        >
                            Contraseña
                        </label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            minlength="6"
                            class="w-full px-4 py-3 border border-carbon-200 rounded-lg focus:ring-2 focus:ring-navy-500 focus:border-transparent"
                            placeholder="Mínimo 6 caracteres"
                        />
                    </div>

                    <div>
                        <label
                            for="confirm-password"
                            class="block text-sm font-medium text-carbon-700 mb-2"
                        >
                            Confirmar contraseña
                        </label>
                        <input
                            type="password"
                            id="confirm-password"
                            name="confirm-password"
                            required
                            minlength="6"
                            class="w-full px-4 py-3 border border-carbon-200 rounded-lg focus:ring-2 focus:ring-navy-500 focus:border-transparent"
                            placeholder="Repite tu contraseña"
                        />
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-navy-800 text-white py-3 rounded-lg font-semibold hover:bg-navy-900 transition-colors"
                    >
                        Crear Cuenta
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-carbon-500 text-sm">
                        ¿Ya tienes cuenta?{" "}
                        <a
                            href={`/login?redirect=${Astro.url.searchParams.get("redirect") || "/"}`}
                            class="text-navy-800 font-semibold hover:underline"
                        >
                            Inicia sesión aquí
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</PublicLayout>
