export const prerender = false;

import PublicLayout from "../layouts/PublicLayout.astro";
import { supabase } from "../lib/supabase";

// Email function - imported dynamically to avoid errors if nodemailer is not configured
let sendWelcomeEmail: any = null;
let emailModuleError: string | null = null;
try {
    console.log('üîß [REGISTRO] Importando m√≥dulo de email...');
    const emailModule = await import("../lib/email");
    sendWelcomeEmail = emailModule.sendWelcomeEmail;
    console.log('‚úÖ [REGISTRO] M√≥dulo de email importado correctamente');
} catch (e) {
    emailModuleError = e.message;
    console.error('‚ùå [REGISTRO] Error al importar m√≥dulo de email:', e);
    console.error('   Esto significa que los emails NO se enviar√°n');
}

// Handle redirect first, before any response is sent
const accessToken = Astro.cookies.get("user-access-token")?.value;
let shouldClearCookies = false;

if (accessToken) {
    const { data, error } = await supabase.auth.getUser(accessToken);
    if (data?.user && !error) {
        const redirectTo = Astro.url.searchParams.get("redirect") || "/";
        return Astro.redirect(redirectTo);
    } else {
        shouldClearCookies = true;
    }
}

// Clear invalid cookies before any rendering
if (shouldClearCookies) {
    Astro.cookies.delete("user-access-token", { path: "/" });
    Astro.cookies.delete("user-refresh-token", { path: "/" });
}

// Handle registration form submission
let error = "";
let success = "";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;
    const confirmPassword = formData.get("confirm-password") as string;
    const name = formData.get("name") as string;

    // Validation
    if (password !== confirmPassword) {
        error = "Las contrase√±as no coinciden.";
    } else if (password.length < 6) {
        error = "La contrase√±a debe tener al menos 6 caracteres.";
    } else {
        const { data, error: authError } = await supabase.auth.signUp({
            email,
            password,
            options: {
                data: {
                    full_name: name,
                },
            },
        });

        if (authError) {
            if (authError.message.includes("already registered")) {
                error =
                    "Este email ya est√° registrado. Intenta iniciar sesi√≥n.";
            } else {
                error = authError.message;
            }
        } else if (data.user) {
            // Send welcome email (only if email module is available)
            if (sendWelcomeEmail) {
                try {
                    console.log('\n=== ENVIANDO EMAIL DE BIENVENIDA ===');
                    console.log('üìß Usuario registrado:', email);
                    console.log('üìß Nombre:', name);
                    const emailResult = await sendWelcomeEmail(email, name);
                    console.log('üìß Resultado del env√≠o:', JSON.stringify(emailResult, null, 2));
                    
                    if (emailResult.success) {
                        console.log('‚úÖ Email de bienvenida enviado exitosamente');
                    } else if (emailResult.skipped) {
                        console.warn('‚ö†Ô∏è Email omitido:', emailResult.error);
                    } else {
                        console.error('‚ùå Error al enviar email:', emailResult.error);
                    }
                    console.log('=== FIN ENV√çO EMAIL ===\n');
                } catch (e) {
                    console.error('\n‚ùå EXCEPCI√ìN al enviar email de bienvenida');
                    console.error('   Error:', e.message);
                    console.error('   Stack:', e.stack);
                    console.error('=== FIN ENV√çO EMAIL (ERROR) ===\n');
                }
            } else {
                console.error('\n‚ö†Ô∏è M√ìDULO DE EMAIL NO DISPONIBLE');
                if (emailModuleError) {
                    console.error('   Raz√≥n:', emailModuleError);
                }
                console.error('   El email de bienvenida NO fue enviado\n');
            }

            // Check if email confirmation is required
            if (data.session) {
                // Auto-login if no confirmation required
                Astro.cookies.set(
                    "user-access-token",
                    data.session.access_token,
                    {
                        path: "/",
                        httpOnly: true,
                        secure: import.meta.env.PROD,
                        sameSite: "lax",
                        maxAge: 60 * 60 * 24,
                    },
                );

                Astro.cookies.set(
                    "user-refresh-token",
                    data.session.refresh_token,
                    {
                        path: "/",
                        httpOnly: true,
                        secure: import.meta.env.PROD,
                        sameSite: "lax",
                        maxAge: 60 * 60 * 24 * 30,
                    },
                );

                const redirectTo =
                    Astro.url.searchParams.get("redirect") || "/";
                return Astro.redirect(redirectTo);
            } else {
                success =
                    "Cuenta creada exitosamente. Por favor, verifica tu email antes de iniciar sesi√≥n.";
            }
        }
    }
}
