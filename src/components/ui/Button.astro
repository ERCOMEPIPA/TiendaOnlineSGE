---
interface Props {
    variant?: "primary" | "secondary" | "outline" | "ghost" | "gradient";
    size?: "sm" | "md" | "lg";
    href?: string;
    class?: string;
    type?: "button" | "submit" | "reset";
    disabled?: boolean;
}

const {
    variant = "primary",
    size = "md",
    href,
    class: className = "",
    type = "button",
    disabled = false,
} = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center font-medium transition-all duration-300 focus:outline-none disabled:opacity-50 disabled:cursor-not-allowed";

const variants = {
    primary: "bg-[#2a2622] text-white hover:bg-[#3d3831] rounded-none",
    secondary: "bg-[#8B4513] text-[#fdfcf9] hover:bg-[#A68A4B] rounded-none",
    outline:
        "border border-[#2a2622] bg-[#2a2622] text-white hover:bg-[#3d3831] rounded-none",
    ghost: "text-[#6f6458] hover:text-[#2a2622] underline-offset-4 hover:underline",
    gradient: "bg-[#3d3831] text-[#fdfcf9] hover:bg-[#2a2622] rounded-none",
};

const sizes = {
    sm: "px-4 py-2 text-xs tracking-wider uppercase",
    md: "px-6 py-3 text-xs tracking-wider uppercase",
    lg: "px-8 py-4 text-sm tracking-wider uppercase",
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;

const Element = href ? "a" : "button";
---

{
    href ? (
        <a
            href={href}
            class={classes}
            style={
                variant === "primary" ||
                variant === "outline" ||
                variant === "secondary" ||
                variant === "gradient"
                    ? "color: white !important;"
                    : undefined
            }
        >
            <slot />
        </a>
    ) : (
        <button
            type={type}
            class={classes}
            disabled={disabled}
            style={
                variant === "primary" ||
                variant === "outline" ||
                variant === "secondary" ||
                variant === "gradient"
                    ? "color: white !important;"
                    : undefined
            }
        >
            <slot />
        </button>
    )
}
