---
interface Props {
    user?: any;
}

const { user } = Astro.props;
---

{user ? (
    <div class="relative group">
        <button class="flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-carbon-100 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-sm hidden sm:inline">{user.user_metadata?.full_name || user.email?.split('@')[0]}</span>
        </button>
        
        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-carbon-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-50">
            <div class="py-2">
                <div class="px-4 py-2 border-b border-carbon-100">
                    <p class="text-xs text-carbon-500">Conectado como</p>
                    <p class="text-sm font-medium text-carbon-900 truncate">{user.email}</p>
                </div>
                <a href="/auth/logout" class="block px-4 py-2 text-sm text-carbon-700 hover:bg-carbon-50 transition-colors">
                    Cerrar sesión
                </a>
            </div>
        </div>
    </div>
) : (
    <a href="/login" class="flex items-center gap-2 px-4 py-2 bg-navy-800 text-white rounded-lg hover:bg-navy-900 transition-colors text-sm font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
        </svg>
        <span>Iniciar sesión</span>
    </a>
)}
