---
import type { Product } from "../../lib/supabase";
import { formatPrice } from "../../lib/supabase";
import WishlistButton from "../islands/WishlistButton";

interface Props {
    product: Product;
}

const { product } = Astro.props;
---

<a
    href={`/productos/${product.slug}`}
    class="group block bg-cream-50 overflow-hidden
           border border-carbon-200 shadow-soft
           hover:shadow-medium hover:border-carbon-300
           transition-all duration-400"
>
    <!-- Image -->
    <div class="aspect-[3/4] bg-cream-100 relative overflow-hidden">
        {
            product.images?.[0] ? (
                <img
                    src={product.images[0]}
                    alt={product.name}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
                    loading="lazy"
                />
            ) : (
                <div class="w-full h-full flex items-center justify-center text-carbon-300">
                    <svg
                        class="w-16 h-16"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                    </svg>
                </div>
            )
        }

        {/* Subtle gradient overlay on hover */}
        <div
            class="absolute inset-0 bg-[#2a2622]/0 group-hover:bg-[#2a2622]/10 transition-all duration-400"
        >
        </div>

        {/* Wishlist button */}
        <div class="absolute top-3 right-3 z-10">
            <WishlistButton client:load product={product} size="sm" />
        </div>

        {/* Featured badge - minimal */}
        {
            product.featured && (
                <span class="absolute top-3 left-3 bg-[#8B4513] text-[#fdfcf9] text-xs font-medium px-2 py-1 uppercase tracking-wider">
                    Destacado
                </span>
            )
        }

        {/* Out of stock overlay */}
        {
            product.stock < 1 && (
                <div class="absolute inset-0 bg-[#fdfcf9]/80 flex items-center justify-center">
                    <span class="bg-[#2a2622] text-[#fdfcf9] px-4 py-2 text-xs uppercase tracking-wider font-medium">
                        Agotado
                    </span>
                </div>
            )
        }

        {/* Low stock indicator - subtle */}
        {
            product.stock > 0 && product.stock < 6 && (
                <span class="absolute bottom-3 right-3 bg-[#2a2622] text-[#fdfcf9] text-xs font-medium px-2 py-1 uppercase tracking-wider">
                    Ãšltimas {product.stock}
                </span>
            )
        }

        {/* Quick view on hover - minimal */}
        <div
            class="absolute bottom-0 left-0 right-0 opacity-0 group-hover:opacity-100
                    translate-y-2 group-hover:translate-y-0 transition-all duration-300 z-10"
        >
            <span
                class="block w-full py-3 bg-[#2a2622] text-[#fdfcf9]
                         text-center text-xs font-medium uppercase tracking-wider"
            >
                Ver producto
            </span>
        </div>
    </div>

    <!-- Content -->
    <div class="p-5">
        {/* Artist */}
        {
            product.artist && (
                <p class="text-xs text-[#8B4513] font-medium uppercase tracking-wider mb-1.5">
                    {product.artist}
                </p>
            )
        }

        {/* Name */}
        <h3
            class="font-medium text-carbon-800 group-hover:text-navy-800 transition-colors duration-300 line-clamp-2"
        >
            {product.name}
        </h3>

        {/* Price */}
        <p class="mt-3 text-xl font-serif text-navy-900">
            {formatPrice(product.price)}
        </p>

        {/* Sizes preview with better styling */}
        {
            product.sizes?.length > 0 && (
                <div class="mt-3 flex gap-1.5 flex-wrap">
                    {product.sizes.slice(0, 5).map((size) => (
                        <span
                            class="text-xs text-carbon-500 bg-carbon-50 border border-carbon-200/50 
                                     px-2 py-1 rounded-lg hover:border-accent-gold/50 hover:bg-accent-gold/5 
                                     transition-colors duration-200"
                        >
                            {size}
                        </span>
                    ))}
                    {product.sizes.length > 5 && (
                        <span class="text-xs text-accent-gold font-medium px-2 py-1">
                            +{product.sizes.length - 5}
                        </span>
                    )}
                </div>
            )
        }
    </div>
</a>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
