---
import BaseLayout from "./BaseLayout.astro";
import CartIcon from "../components/islands/CartIcon";
import CartSlideOver from "../components/islands/CartSlideOver";
import UserMenu from "../components/ui/UserMenu.astro";
import { getUserSession } from "../lib/auth";

interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props;

// Get user session for the header
const userSession = await getUserSession(Astro.cookies);

const navLinks = [
    { href: "/", label: "Inicio" },
    { href: "/productos", label: "Productos" },
    { href: "/categoria/camisetas", label: "Camisetas" },
    { href: "/categoria/sudaderas", label: "Sudaderas" },
    { href: "/categoria/accesorios", label: "Accesorios" },
];

const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description}>
    <!-- Header -->
    <header
        class="sticky top-0 z-30 bg-white/95 backdrop-blur-sm border-b border-carbon-100"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 lg:h-20">
                <!-- Logo -->
                <a href="/" class="flex items-center gap-2">
                    <span
                        class="text-2xl lg:text-3xl font-serif font-bold text-navy-900"
                    >
                        Fashion<span class="text-accent-gold">Store</span>
                    </span>
                </a>

                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center gap-8">
                    {
                        navLinks.map((link) => (
                            <a
                                href={link.href}
                                class={`text-sm font-medium transition-colors hover:text-navy-800
                ${
                    currentPath === link.href
                        ? "text-navy-800 border-b-2 border-accent-gold pb-1"
                        : "text-carbon-600"
                }`}
                            >
                                {link.label}
                            </a>
                        ))
                    }
                </nav>

                <!-- Actions -->
                <div class="flex items-center gap-4">
                    <!-- Search -->
                    <button
                        class="p-2 text-carbon-600 hover:text-navy-800 transition-colors"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            ></path>
                        </svg>
                    </button>

                    <!-- Cart -->
                    <CartIcon client:load />

                    <!-- User Menu -->
                    <UserMenu user={userSession?.user} />

                    <!-- Mobile menu button -->
                    <button
                        id="mobile-menu-btn"
                        class="lg:hidden p-2 text-carbon-600 hover:text-navy-800"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <nav
            id="mobile-menu"
            class="hidden lg:hidden border-t border-carbon-100 bg-white"
        >
            <div class="px-4 py-4 space-y-2">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class={`block py-2 px-3 rounded-lg font-medium transition-colors
              ${
                  currentPath === link.href
                      ? "bg-navy-50 text-navy-800"
                      : "text-carbon-600 hover:bg-cream-100"
              }`}
                        >
                            {link.label}
                        </a>
                    ))
                }
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-[calc(100vh-4rem-12rem)]">
        <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-navy-900 text-white mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Brand -->
                <div class="md:col-span-1">
                    <span class="text-2xl font-serif font-bold">
                        Fashion<span class="text-accent-gold">Store</span>
                    </span>
                    <p class="mt-4 text-navy-300 text-sm">
                        Tu tienda de merch personalizado de tus artistas favoritos.
                        Calidad premium, diseños exclusivos.
                    </p>
                </div>

                <!-- Links -->
                <div>
                    <h4 class="font-semibold mb-4">Tienda</h4>
                    <ul class="space-y-2 text-navy-300 text-sm">
                        <li>
                            <a
                                href="/productos"
                                class="hover:text-white transition-colors"
                                >Todos los productos</a>
                        </li>
                        <li>
                            <a
                                href="/categoria/camisetas"
                                class="hover:text-white transition-colors"
                                >Camisetas</a>
                        </li>
                        <li>
                            <a
                                href="/categoria/sudaderas"
                                class="hover:text-white transition-colors"
                                >Sudaderas</a>
                        </li>
                        <li>
                            <a
                                href="/categoria/accesorios"
                                class="hover:text-white transition-colors"
                                >Accesorios</a>
                        </li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-semibold mb-4">Ayuda</h4>
                    <ul class="space-y-2 text-navy-300 text-sm">
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >Contacto</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >Envíos</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >Devoluciones</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >FAQ</a>
                        </li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-semibold mb-4">Legal</h4>
                    <ul class="space-y-2 text-navy-300 text-sm">
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >Privacidad</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >Términos</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-white transition-colors"
                                >Cookies</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div
                class="border-t border-navy-700 mt-8 pt-8 text-center text-navy-400 text-sm"
            >
                <p>
                    &copy; {new Date().getFullYear()} FashionStore. Todos los derechos
                    reservados.
                </p>
            </div>
        </div>
    </footer>

    <!-- Cart Slide Over (React Island) -->
    <CartSlideOver client:load />

    <script>
        // Mobile menu toggle
        const menuBtn = document.getElementById("mobile-menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");

        menuBtn?.addEventListener("click", () => {
            mobileMenu?.classList.toggle("hidden");
        });
    </script>
</BaseLayout>
