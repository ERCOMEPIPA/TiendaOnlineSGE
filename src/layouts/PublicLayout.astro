---
import BaseLayout from "./BaseLayout.astro";
import CartIcon from "../components/islands/CartIcon";
import CartSlideOver from "../components/islands/CartSlideOver";
import SearchButton from "../components/islands/SearchButton";
import WishlistIcon from "../components/islands/WishlistIcon";
import UserMenu from "../components/ui/UserMenu.astro";
import Newsletter from "../components/Newsletter.astro";
import NewsletterPopup from "../components/islands/NewsletterPopup.astro";
import AnnouncementBanner from "../components/AnnouncementBanner.astro";
import { getUserSession } from "../lib/auth";

interface Props {
    title: string;
    description?: string;
    showNewsletterPopup?: boolean;
}

const { title, description, showNewsletterPopup = false } = Astro.props;

// Get user session for the header
const userSession = await getUserSession(Astro.cookies);

const navLinks = [
    { href: "/", label: "Inicio" },
    { href: "/productos", label: "Productos" },
    { href: "/ofertas", label: "Ofertas" },
    { href: "/categoria/camisetas", label: "Camisetas" },
    { href: "/categoria/sudaderas", label: "Sudaderas" },
    { href: "/categoria/zapatos", label: "Zapatos" },
    { href: "/categoria/accesorios", label: "Accesorios" },
];

const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description}>
    <!-- Announcement Banner -->
    <AnnouncementBanner />

    <!-- Header Origin Style - Minimal & Elegant -->
    <header class="sticky top-0 z-30 bg-[#fdfcf9] border-b border-[#e8e4dc]">
        <div class="max-w-[1400px] mx-auto px-3 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 lg:h-20 gap-2">
                <!-- Logo Elegant - Left aligned, bigger -->
                <a href="/" class="flex items-center flex-shrink-0">
                    <span
                        class="text-2xl lg:text-4xl font-serif italic text-[#2a2622] tracking-tight"
                    >
                        HYPE<span class="text-[#8B4513]">STAGE</span>
                    </span>
                </a>

                <!-- Desktop Navigation - Centered -->
                <nav
                    class="hidden lg:flex items-center justify-center gap-8 absolute left-1/2 transform -translate-x-1/2"
                >
                    {
                        navLinks.map((link) => (
                            <a
                                href={link.href}
                                class={`text-sm font-medium tracking-wide transition-all duration-300 hover:text-[#8B4513]
                ${
                    currentPath === link.href
                        ? "text-[#2a2622] border-b border-[#2a2622]"
                        : "text-[#6f6458]"
                }`}
                            >
                                {link.label}
                            </a>
                        ))
                    }
                </nav>

                <!-- Actions - Right aligned -->
                <div class="flex items-center gap-2 sm:gap-4 flex-shrink-0">
                    <!-- Search -->
                    <SearchButton client:load />

                    <!-- Wishlist -->
                    <WishlistIcon client:load />

                    <!-- Cart -->
                    <CartIcon client:load />

                    <!-- User Menu -->
                    <UserMenu user={userSession?.user} />

                    <!-- Mobile menu button -->
                    <button
                        id="mobile-menu-btn"
                        class="lg:hidden p-2 text-[#6f6458] hover:text-[#2a2622]"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <nav
            id="mobile-menu"
            class="hidden lg:hidden border-t border-carbon-100 bg-white"
        >
            <div class="px-4 py-4 space-y-2">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class={`block py-2 px-3 rounded-lg font-medium transition-colors
              ${
                  currentPath === link.href
                      ? "bg-navy-50 text-navy-800"
                      : "text-carbon-600 hover:bg-cream-100"
              }`}
                        >
                            {link.label}
                        </a>
                    ))
                }
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-[calc(100vh-4rem-12rem)]">
        <slot />
    </main>

    <!-- Newsletter Section -->
